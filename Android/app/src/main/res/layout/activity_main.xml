<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="413dp"
        android:layout_height="70dp"
        android:layout_marginBottom="776dp"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="825dp"
        android:layout_marginStart="-5dp"
        android:background="@drawable/sfondo1"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="-5dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">





        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="124dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/lavoratore1" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="163dp"
                    android:layout_height="34dp"
                    android:text="Nome: Tommaso"
                    android:textColor="@color/orange1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:text="Cognome: Lorito"
                    android:textColor="@color/orange1" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:backgroundTint="@color/orange1"
                    android:text="Controllo Dati"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="124dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/lavoratore2" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="163dp"
                    android:layout_height="34dp"
                    android:text="Nome: Alessandro"
                    android:textColor="@color/orange1" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:text="Cognome: Vergati"
                    android:textColor="@color/orange1" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:backgroundTint="@color/orange1"
                    android:text="Controllo Dati"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="383dp"
            android:layout_height="124dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="151dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/lavoratore3" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="163dp"
                    android:layout_height="34dp"
                    android:text="Nome: Vincenzo "
                    android:textColor="@color/orange1" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="163dp"
                    android:layout_height="35dp"
                    android:text="Cognome: Consoli"
                    android:textColor="@color/orange1" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:backgroundTint="@color/orange1"
                    android:text="Controllo Dati"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/chisiamo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="101dp"
        android:layout_marginTop="6dp"
        android:text="Chi Siamo?"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        android:textColor="@color/orange1"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

